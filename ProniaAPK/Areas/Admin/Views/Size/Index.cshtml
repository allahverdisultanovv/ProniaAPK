 @using ProniaAPK.Models
@model List<Size>
@{
    var count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sizes</h4>
            <p class="card-description">
                <a asp-action="create" class="btn btn-success">Create Size</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Product Count
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Size size in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <p>@size.Name</p>
                                </td>
                                <td>
                                    <p>@size.ProductSizes.Count</p>
                                </td>
                                <td>
                                    <a asp-action="delete" asp-route-id="@size.Id" class="btn btn-danger">Delete</a>
                                    <a asp-action="update" asp-route-id="@size.Id" class="btn btn-warning">Update</a>
                                    <a class="btn btn-primary">Detail</a>
                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>